<h1> Transactions for <%= user.username %> </h1>

<div class="containter">
    <div class="row">
        <div class="col">
            <p>
                <a  class="btn btn-sm btn-primary"
                     href="/transactions/groupByCategory">group by category</a></p>
        </div> 
        
        <div class="col">
            <p>
                <a  class="btn btn-sm btn-primary"
                     href="/transactions/byUser">sort by category</a>
            </p>
        </div>
        
        <div class="col">
            <p>
                <a  class="btn btn-sm btn-primary"
                     href="/transactions/byUser">sort by amount</a></p>
        </div>

        <div class="col">
            <p>
                <a  class="btn btn-sm btn-primary"
                     href="/transactions/byUser">sort by description</a></p>
        </div>

        <div class="col">
            <p>
                <a  class="btn btn-sm btn-primary"
                     href="/transactions/byUser">sort by date</a></p>
        </div>
            
    </div>
    
    <span class="border">
    <div class="row">
        <span class="border">
        <div class="col-2">description</div>
        </span>
        <span class="border">
        <div class="col-2">amount</div>
        </span>
        <span class="border">
        <div class="col-2">category</div>
        </span>
        <span class="border">
        <div class="col-2">date</div>
        </span>
        <span class="border">
        <div class="col-2">delete</div>
        </span>
        <span class="border">
        <div class="col-2">edit</div>
        </span>
     </div>
     </span>
      <% items.forEach(item => { %>
        <div class="row">
            <div class="col">
                <%= item.description %>
            </div>
            <div class="col">
                <%= item.amount %>
            </div>
            <div class="col">
                <%= item.category %>
            </div>
            <div class="col">
                <%= item.date.toDateString() %>
            </div>
            <div class="col">
                <a href="/transactions/remove/<%=item._id %>">
                    <i class="bi bi-trash"></i>
                </a>
            </div>
            <div class="col">
                <a href="/transactions/edit/<%=item._id %>">
                    <i class="bi bi-pencil-square"></i>
                </a>
            </div>
        </div>
    <% }) %>
  </div>
    
 

        <form method="post" action="transactions">
            <input type="text" placeholder = "description" name="description">
            <br>
            <input type="text" placeholder = "category" name="category">
            <br>
            <input type="number" placeholder = "amount" name="amount">
            <br>
            <input type="date" name="date">
            <br>
            <input type="submit" value="store">
        </form>
      </div>
     
    </div>
</div>
