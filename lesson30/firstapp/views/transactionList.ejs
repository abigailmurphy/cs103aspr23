<h1> Transactions for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here is your list of things to do! </p>
   
      <ul class="list-group">
        <% items.forEach(item => { %>
            <li class="list-group-item">
                <span class="">
                    <% if (item.completed) { %>
                      <a 
                        href="/todo/uncomplete/<%= item._id %>">
                        <i class="bi bi-check-circle-fill"></i>
                    </a>
                    <% } else {%>
                      <a 
                        href="/todo/complete/<%= item._id %>">
                        <i class="bi bi-check-circle"></i>
                    </a>
                    <%} %>
                    <a href="/todo/remove/<%=item._id %>">
                      <i class="bi bi-trash"></i>
                    </a>
                </span>
                <span class="mx-5">
                  <%= item.item %>
                </span>
                <span class="badge rounded-pill bg-danger">
                  <%= item.priority?item.priority:5 %> 
                </span>
                <a 
                   href="/todo/edit/<%=item._id %>">
                  <i class="bi bi-pencil-square"></i>
              </a>
                  
            </li>
            <br>
        <% }) %>

        <form method="post" action="transaction">
            <input type="text" placeholder = "description" name="description">
            <br>
            <input type="text" placeholder = "category" name="category">
            <br>
            <input type="text" placeholder = "amount" name="amount">
            <br>
            <input type="date" name="date">
            <br>
            <input type="submit" value="store">
        </form>
      </div>
      <div class="col">
        <h2> Summary of Site Usage</h2>
        <p>
          <a  class="btn btn-lg btn-primary"
              href="/transactions/byUser">Show transactions for all users</a></p>
      </div> 
    </div>
</div>
